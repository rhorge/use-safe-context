{
  "name": "use-safe-context",
  "version": "1.0.4",
  "description": "A React hook that lets you consume a context only within its provider, it throws an error otherwise",
  "keywords": [
    "react",
    "react hooks",
    "typescript",
    "npm",
    "yarn",
    "state",
    "state management",
    "context",
    "react context",
    "use",
    "useContext",
    "use-safe-context"
  ],
  "homepage": "https://github.com/rhorge/use-safe-context#readme",
  "bugs": {
    "url": "https://github.com/rhorge/use-safe-context/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhorge/use-safe-context.git"
  },
  "license": "MIT",
  "author": "rhorge",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "/dist/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.7",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.13.1",
    "rollup": "^4.22.4",
    "rollup-plugin-typescript2": "^0.25.3",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.1.3",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "module": "dist/index.mjs",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
